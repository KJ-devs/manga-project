{% extends 'base.html.twig' %}
{% block body %}

	<section class="vh-100" style="background-color: #eee;">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-lg-1 col-xl-11">
					<div class="card text-black" style="border-radius: 25px;">
						<div class="card-body p-md-5">
							<div class="row justify-content-center">
								<div class="col-md-5 col-lg-8 col-xl-5 order-2 order-lg-1">
									<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Modifier</p>
									<form action="modifierManga" name="modifier" method="POST" class="mx-1 mx-md-4">
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-user fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<label class="form-label" for="title">Titre
												</label>
												<input type="hidden" id="id" name="id" value="{{manga.getid()}}"/>
												<input type="text" id="title" name="title" value="{{manga.gettitle()}}" class="form-control"/>
											</div>
										</div>
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<label class="form-label" for="description">description
												</label>
												<input type="text" id="description" name="description" value="{{manga.getdescription()}}" class="form-control"/>

											</div>
										</div>
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<label class="form-label" for="category">cat√©gorie</label>
												<input type="text" id="category" name="category" class="form-control"/>

											</div>

										</div>
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<label class="form-label" for="posterImage">image</label>
												<input type="test" id="posterImage" name="posterImage" value="{{manga.getposterImage()}}" class="form-control"/>

											</div>
										</div>
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-key fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<label class="form-label" for="price">prix</label>
												<input type="text" id="price" name="price" value="{{manga.getprix()}}" class="form-control"/>

											</div>
										</div>
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-key fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												<label class="form-label" for="stock">Stock</label>
												<input type="text" id="stock" name="stock" value="{{manga.getstock()}}" class="form-control"/>

											</div>
										</div>
										
										<div>
										{% for categorie in categories %}

											<label for="{{ categorie.getcategoryTitle()}}">{{ categorie.getcategoryTitle()}}</label>
											<input type="checkbox" name="categorie[]" value="{{ categorie.getcategoryTitle()}}">

										{% endfor %}
										</div>
									<div class="d-flex  justify-content-center mx-4 mb-3 mb-lg-4">
											<input type="submit" name="modifier" class="btn btn-primary" value="Modifier">

										</div>
									</form>
								</div>
								<div class="col-md-10 col-lg-6 col-xl-7 d-flex justify-content-center align-items-center order-1 order-lg-2">
									<img src="{{manga.getposterImage()}}" class="img-fluid" alt="Sample image">

								</div>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
