{% extends 'base.html.twig' %}

{% block title %}GraoullyMangaStore
{% endblock %}
{% block stylesheets %}


{% endblock %}
{% block body %}
  
		{% for manga in mangas %}
			{# send data to modifier Manga.php #}


			<form action="modifierManga" name="modifierManga" method="post">
				<div class="col-md-4">
					<div class="thumbnail">
						<img src="{{ manga.posterImage }}" alt="{{ manga.title }}" class="img-responsive">
						<div class="caption">
							<h3>{{ manga.gettitle() }}</h3>
							<p>{{ manga.description }}</p>
							<input type="hidden" name="manga" value="{{manga.getid()}}">
							<input type='submit' value='Modifier' name="modifierManga" class='btn btn-primary'>
						</div>
					</div>
				</div>
			</form>


		{% endfor %}

{% endblock %}
