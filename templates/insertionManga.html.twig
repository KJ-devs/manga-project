{% extends 'base.html.twig' %}
{% block body %}

	<form action="insertionManga" name="insertManga" method="POST">

		<label for="title">Titre</label>
		<input type="text" name="title" id="title" placeholder="titre" >
		<label for="description">description</label>
		<input type="text" name="description" id="description" placeholder="description" >
		<label for="poster_image">Image</label>
		<input type="text" name="poster_image" id="poster_image" placeholder="lien de l'image" >
		<label for="price">Prix</label>
		<input type="text" name="price" id="price" placeholder="Prix" >
		<label for="stock">Stock</label>
		<input type="text" name="stock" id="stock" placeholder="Stock" >
		<label for="category">Catégorie</label>
		<input type="text" name="category" id="category" placeholder="Catégorie" >
		
		<br>
		{% for categorie in categories %}
				
				<label for="{{ categorie.getcategoryTitle()}}">{{ categorie.getcategoryTitle()}}</label>
				<input type="checkbox" name="categorie[]" value="{{ categorie.getcategoryTitle()}}" >
			
    	{% endfor %}
		<input type="submit" value="Ajouter un manga" name="insertManga">
	</form>
	
{% endblock %}
